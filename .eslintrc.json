{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true // Base environment for Node.js globals
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "env": {
        "jest": true
      },
      "globals": {
        "describe": "readonly",
        "it": "readonly",
        "before": "readonly",
        "after": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "beforeAll": "readonly",
        "afterAll": "readonly"
      }
    },
    {
      "files": ["public/**/*.js"],
      "env": {
        "browser": true,
        "es2021": true
      },
      "rules": {
        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
        "no-undef": "warn"
      },
      "globals": {
        "Telegram": "readonly"
      }
    }
  ]
}
